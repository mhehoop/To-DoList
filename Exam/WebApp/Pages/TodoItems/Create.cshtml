@page
@using Domain
@model WebApp.Pages.TodoItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TodoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TodoItem.Heading" class="control-label"></label>
                <input asp-for="TodoItem.Heading" class="form-control required" />
                <span asp-validation-for="TodoItem.Heading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.Description" class="control-label"></label>
                <input asp-for="TodoItem.Description" class="form-control required" />
                <span asp-validation-for="TodoItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.EPriority" class="control-label">Priority</label>
                <select asp-for="TodoItem.EPriority" class="form-control">
                    <option selected="selected" value=@EPriority.Low>Low</option>
                    <option  value=@EPriority.Medium>Medium</option>
                    <option  value=@EPriority.High>High</option>
                </select>
                <span asp-validation-for="TodoItem.EPriority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDue" class="control-label">Due date</label>
                <input asp-for="DateDue" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TodoItem.CategoryId" class="control-label">Category</label>
                <select asp-for="TodoItem.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
